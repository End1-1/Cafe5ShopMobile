<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShopMobile" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textViewStyle">@style/BSTextView</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="imageButtonStyle">@style/BSImageButton</item>
        <item name="editTextStyle">@style/BSEditText</item>

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/lightblue</item>
<!--        <item name="android:dialogTheme">@style/BSDialog</item> -->
    </style>

    <style name="BSTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BSImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@null</item>
    </style>

    <style name="BSEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/menubg2</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="BSDialog" parent="@style/Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>